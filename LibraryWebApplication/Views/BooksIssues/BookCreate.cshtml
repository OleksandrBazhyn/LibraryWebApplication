@model LibraryWebApplication.Models.BooksIssue

@{
    ViewData["Title"] = "Створити запис позики книги";
}

<h1>Створити запис позики книги "@ViewBag.BookName"</h1>

<h4>BooksIssue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowerLibraryId" class="control-label"></label>
                <select asp-for="BorrowerLibraryId" class ="form-control" asp-items="ViewBag.BorrowerLibraryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReaderId" class="control-label"></label>
                <select asp-for="ReaderId" class ="form-control" asp-items="ViewBag.ReaderId"></select>
            </div>

            <input type="hidden" value="@ViewBag.BookId" name="BookId" />

            <div class="form-group">
                <label asp-for="IssuedDate" class="control-label"></label>
                <input asp-for="IssuedDate" class="form-control" />
                <span asp-validation-for="IssuedDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HomeTaken" /> @Html.DisplayNameFor(model => model.HomeTaken)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="BookCreate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
