@model LibraryWebApplication.Models.BooksIssue

@{
    ViewData["Title"] = "Створити запис про позику в бібліотеці";
}

<h1>Створити запис про позику в бібліотеці за адресою @ViewBag.LibraryAddress</h1>

<h4>BooksIssue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LibraryCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            
            <input type="hidden" value="@ViewBag.LibraryId" name="BorrowerLibraryId" />

            <div class="form-group">
                <label asp-for="ReaderId" class="control-label"></label>
                <select asp-for="ReaderId" class ="form-control" asp-items="ViewBag.ReaderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BooksId" class="control-label"></label>
                <select asp-for="BooksId" class ="form-control" asp-items="ViewBag.BooksId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IssuedDate" class="control-label"></label>
                <input asp-for="IssuedDate" class="form-control" />
                <span asp-validation-for="IssuedDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HomeTaken" /> @Html.DisplayNameFor(model => model.HomeTaken)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="LibraryCreate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LibraryIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
