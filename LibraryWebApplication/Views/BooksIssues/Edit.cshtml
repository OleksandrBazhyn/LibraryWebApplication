@model LibraryWebApplication.Models.BooksIssue

@{
    ViewData["Title"] = "Редагувати запис про позику";
}

<h1>Редагувати запис про позику</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BorrowerLibraryId" class="control-label"></label>
                <select asp-for="BorrowerLibraryId" class="form-control" asp-items="ViewBag.BorrowerLibraryId"></select>
                <span asp-validation-for="BorrowerLibraryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReaderId" class="control-label"></label>
                <select asp-for="ReaderId" class="form-control" asp-items="ViewBag.ReaderId"></select>
                <span asp-validation-for="ReaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BooksId" class="control-label"></label>
                <select asp-for="BooksId" class="form-control" asp-items="ViewBag.BooksId"></select>
                <span asp-validation-for="BooksId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedDate" class="control-label"></label>
                <input asp-for="IssuedDate" class="form-control" />
                <span asp-validation-for="IssuedDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HomeTaken" /> @Html.DisplayNameFor(model => model.HomeTaken)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
