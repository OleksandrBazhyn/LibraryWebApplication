@model IEnumerable<LibraryWebApplication.Models.Book>

@{
    ViewData["Title"] = "Книги за мовою";
}

<h1>Книги за мовою @ViewBag.LanguageName</h1>

<p>
    @Html.ActionLink("Додати нову книгу", "LanguageCreate", new { Language = ViewBag.LanguageId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
